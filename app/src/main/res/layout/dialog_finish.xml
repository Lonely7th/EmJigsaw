<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@mipmap/dialog_bg_white">

    <LinearLayout
        android:id="@+id/view_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginTop="24dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingTop="8dp"
                android:gravity="center"
                android:textColor="@color/scoreS"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="·  评分：" />

            <ImageView
                android:id="@+id/iv_score"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toRightOf="@+id/tv_score"
                android:scaleType="centerInside"
                android:layout_marginTop="6dp"
                android:src="@mipmap/score_sss"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_score"
                android:paddingBottom="4dp"
                android:layout_marginLeft="8dp"
                android:paddingTop="4dp"
                android:gravity="center"
                android:textColor="#FF8800"
                android:textStyle="italic"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:text="(完成)" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/tv_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:gravity="center"
                android:textColor="@color/scoreB"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="·  获得  8  个贝壳" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/view_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_best"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_score"
                android:gravity="center"
                android:textColor="@color/colorGary"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textSize="14sp"
                android:text="·  本次成绩：120s  当前最佳：56秒" />

            <TextView
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_score"
                android:gravity="center"
                android:textColor="@color/colorGary"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:textSize="12sp"
                android:visibility="gone"
                android:text="标签：#风景#游戏" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_label"
                android:maxWidth="180dp"
                android:gravity="start"
                android:textColor="@color/colorGary"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:textSize="12sp"
                android:visibility="gone"
                android:text="简介：暂无内容" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_pos"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="4dp"
        android:layout_margin="12dp"
        android:background="@mipmap/icon_clear"
        android:layout_alignParentRight="true"/>
</RelativeLayout>