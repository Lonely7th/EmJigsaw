<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <include layout="@layout/view_common_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGary"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:layout_centerVertical="true"
                android:text="难度系数"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/colorWhite"
                android:padding="8dp"
                android:layout_marginTop="1dp">
                <TextView
                    android:id="@+id/tv_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:text="1.2 *"
                    android:layout_marginStart="8dp" />
                <TextView
                    android:id="@+id/tv_difficulty_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGary"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:text="当其他用户挑战失败时你将得到2个贝壳"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGary"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:layout_centerVertical="true"
                android:text="裁剪格式"/>

            <!--裁剪格式-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@color/colorWhite">

                <GridView
                    android:id="@+id/gv_crop_format"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="4"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGary"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:layout_centerVertical="true"
                android:text="玩法设置"/>

            <!--匿名发布-->
            <RelativeLayout
                android:id="@+id/btn_hide_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/colorWhite"
                android:padding="8dp"
                android:visibility="gone"
                android:layout_marginTop="1dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:text="匿名发布"/>
                <TextView
                    android:id="@+id/tv_hide_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGary"
                    android:textSize="14sp"
                    android:layout_toLeftOf="@+id/iv_hide_name"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:text="不匿名"/>
                <ImageView
                    android:id="@+id/iv_hide_name"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/icon_visibility_no"/>
            </RelativeLayout>

            <!--限制-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/colorWhite"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/btn_limit_type"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_limit_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlue"
                        android:textSize="14sp"
                        android:layout_marginLeft="8dp"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_toRightOf="@+id/tv_limit_type"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/icon_arrow_drop_down_b"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btn_limit_count"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_limit_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlue"
                        android:textSize="14sp"
                        android:layout_toLeftOf="@+id/iv_rigth_2"
                        android:layout_centerVertical="true"
                        android:text="选择数值"/>
                    <ImageView
                        android:id="@+id/iv_rigth_2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/icon_arrow_drop_down_b"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGary"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:text="添加标签"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorWhite"
                android:padding="8dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_label_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="4dp"
                        android:textSize="12sp"
                        android:textColor="@color/colorGary"
                        android:background="@drawable/bg_border_gray"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="未添加"/>
                    <ImageView
                        android:id="@+id/iv_tab_close_1"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/icon_close_b"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_label_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="4dp"
                        android:textSize="12sp"
                        android:textColor="@color/colorGary"
                        android:ellipsize="end"
                        android:lines="1"
                        android:background="@drawable/bg_border_gray"
                        android:text="未添加"/>
                    <ImageView
                        android:id="@+id/iv_tab_close_2"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/icon_close_b"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_label_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="4dp"
                        android:textSize="12sp"
                        android:textColor="@color/colorGary"
                        android:background="@drawable/bg_border_gray"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="未添加"/>
                    <ImageView
                        android:id="@+id/iv_tab_close_3"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/icon_close_b"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGary"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:layout_centerVertical="true"
                android:text="内容描述（选填）"/>

            <EditText
                android:id="@+id/edt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:lines="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:hint="我发布了一条新状态，快来点击看看吧~"
                android:textSize="13sp"
                android:gravity="start"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>