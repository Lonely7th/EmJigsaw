<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.em.jigsaw.view.RoundImageView
            android:id="@+id/iv_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="2dp"/>
        <RelativeLayout
            android:id="@+id/ll_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_head">
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="user_name"/>
            <TextView
                android:id="@+id/tv_creat_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_user_name"
                android:textColor="@color/colorDivider"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:text="2018-12-15 17:50"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/iv_head"
            android:layout_below="@+id/ll_info">
            <TextView
                android:id="@+id/tv_crop_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGary_S"
                android:textSize="13sp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGary"
                android:textSize="12sp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/tv_content_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGary"
                android:textSize="12sp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/tv_content_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/scoreS"
                android:textSize="11sp"
                android:padding="2dp"
                android:background="@drawable/bg_shape_orange"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp">
                <TextView
                    android:id="@+id/tv_label_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlue"
                    android:background="@drawable/bg_border_red"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="风景"/>
                <TextView
                    android:id="@+id/tv_label_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlue"
                    android:ellipsize="end"
                    android:lines="1"
                    android:background="@drawable/bg_border_red"
                    android:text="巴塞罗那"/>
                <TextView
                    android:id="@+id/tv_label_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlue"
                    android:background="@drawable/bg_border_red"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="足球"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_finished"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignTop="@+id/iv_head"
            android:layout_toRightOf="@+id/ll_info"
            android:background="@mipmap/icon_note_finished"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_weight="3">
        <com.em.jigsaw.view.RoundImageView
            android:id="@+id/iv_jigsaw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@color/colorBg"
            android:layout_margin="4dp"/>
    </RelativeLayout>

</LinearLayout>